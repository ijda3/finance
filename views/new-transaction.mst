<!DOCTYPE html>
<html lang="en">

<head>
	{{>head}}
	<link rel="stylesheet" href="/css/new-transaction.css">
</head>

<body>
	<div class="root">
		{{>menu}}
		{{>submenu}}
		<main>
			<div class="content">
				<div class="new-transaction">
					<h1>Cadastrar transação</h1>
					<form action="#">
						<div class="row">
							<div class="input-text">
								<label for="description">Descrição</label>
								<div class="input-wrapper">
									<input type="text" id="description" />
								</div>
								<span class="hint">Dica: Breve descrição da sua despesa</span>
							</div>
							<div class="input-text">
								<label for="amount">Valor</label>
								<div class="input-wrapper">
									<input type="text" id="amount" />
								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-text error">
								<label for="due_date">Data de vencimento</label>
								<div class="input-wrapper">
									<input type="text" id="due_date" />
									<div class="icon icon-calendar"></div>
								</div>
								<span class="error">Error</span>
							</div>
							<div class="input-text">
								<label for="payday">Data de pagamento</label>
								<div class="input-wrapper">
									<input type="text" id="payday" />
									<div class="icon icon-calendar"></div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-text">
								<label for="category">Categoria</label>
								<div class="input-wrapper">
									<input type="text" id="category" />
									<div class="icon icon-arrow_drop_down"></div>
								</div>
							</div>
							<div class="input-text">
								<label for="wallet">Carteira</label>
								<div class="input-wrapper">
									<input type="text" id="wallet" />
									<div class="icon icon-arrow_drop_down"></div>
								</div>
							</div>
						</div>
						<div class="row start-right">
							<div class="button-group">
								<button class="secondary" type="reset">Cancelar</button>
								<button type="submit">Salvar</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</main>
	</div>
</body>

</html>
